                                <li>
                                    <i class="fas fa-at u-s-m-r-8"></i>

                                    <span>@Model.Proprietaire.AspNetUser.Email</span>
                                </li>
                                <li>
                                    <i class="fas fa-phone-volume u-s-m-r-8"></i>&nbsp;

