@model IEnumerable<ProjectAspNETv2.Models.Promotion>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutPageDashboard2.cshtml";
}







<!-- [ breadcrumb ] end -->
<div class="main-body">
    <div class="page-wrapper">
        <!-- [ Main Content ] start -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Liste des promotions</h5>
                    </div>
                    <div class="px-3">
                        <div class="input-group mb-3">
                            <input type="text" class="form-control" placeholder="Nom de promotion" aria-label="Recipient's username" aria-describedby="basic-addon2">
                            <div class="input-group-append">
                                <button class="btn btn-primary" type="button">Trouver</button>
                            </div>
                            <div class="input-group-append">
                                <button class="btn btn-secondary" type="button">
                                    <a href="@Url.Action("Create" , "Promotions")" style="display: inline-block; color : #fff ; text-decoration : none;">Ajouter</a>
                                </button>
                            </div>
                        </div>
                    </div>
                    <div class="card-block table-border-style">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Pourcentage)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Date_Creation)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Date_Validite)
                                        </th>
                                        <th>
                                            Action
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        <tr>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Pourcentage)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Date_Creation)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Date_Validite)
                                            </td>
                                            <td>
                                                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                                                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                                                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- [ Main Content ] end -->
    </div>
</div>

