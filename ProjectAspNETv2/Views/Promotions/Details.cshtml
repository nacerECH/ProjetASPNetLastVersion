@model ProjectAspNETv2.Models.Promotion

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutPageDashboard2.cshtml";
}







<!-- [ breadcrumb ] start -->
<div class="page-header">
    <div class="page-block">
        <div class="row align-items-center">
            <div class="col-md-12">
                <div class="page-header-title">
                </div>
                <ul class="breadcrumb">
                    <li class="breadcrumb-item"><a href="index.html"><i class="feather icon-home"></i></a></li>
                    <li class="breadcrumb-item"><a href="javascript:">Dashboard</a></li>
                    <li class="breadcrumb-item"><a href="javascript:">Promotions</a></li>
                </ul>
            </div>
        </div>
    </div>
</div>
<!-- [ breadcrumb ] end -->
<div class="main-body">
    <div class="page-wrapper">
        <!-- [ Main Content ] start -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Details de Promotion</h5>
                    </div>
                    <div class="card-block pb-2 table-border-style">
                        <div class="mb-2">
                            <div class="row">
                                <div class="col-12 col-sm-6 mb-3">
                                    <h5 class="mb-2">
                                        @Html.DisplayNameFor(model => model.Name)
                                    </h5>
                                    <div>
                                        @Html.DisplayFor(model => model.Name)
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6 mb-3">
                                    <h5 class="mb-2">
                                        @Html.DisplayNameFor(model => model.Pourcentage)
                                    </h5>
                                    <div>
                                        @Html.DisplayFor(model => model.Pourcentage)
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6 mb-3">
                                    <h5 class="mb-2">
                                        @Html.DisplayNameFor(model => model.Date_Creation)
                                    </h5>
                                    <div>
                                        @Html.DisplayFor(model => model.Date_Creation)
                                    </div>
                                </div>
                                <div class="col-12 col-sm-6 mb-3">
                                    <h5 class="mb-2">
                                        @Html.DisplayNameFor(model => model.Date_Validite)
                                    </h5>
                                    <div>
                                        @Html.DisplayFor(model => model.Date_Validite)
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row mt-5" style="justify-content : end;">
                            <div style="width : fit-content;">
                                <div style="display:inline-block;">
                                    <button class="btn btn-primary" type="button">
                                        <a href="@Url.Action("Index" , "Promotions" )" style="display: inline-block; color : #fff ; text-decoration : none;">Liste</a>

                                    </button>
                                </div>
                                <div style="display:inline-block;">
                                    <button class="btn btn-secondary" type="button">
                                        <a href="@Url.Action("Edit" , "Promotions" , new { id = Model.Id } ) " style="display: inline-block; color : #fff ; text-decoration : none;">Modifier</a>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!-- [ Main Content ] end -->
            </div>
        </div>


