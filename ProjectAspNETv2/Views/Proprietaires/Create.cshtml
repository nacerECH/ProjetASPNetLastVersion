@model ProjectAspNETv2.Models.Proprietaire

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutWelcomePage.cshtml";

}














<!--====== App Content ======-->
<div class="app-content">

    <!--====== Section 1 ======-->
    <div class="u-s-p-y-60">

        <!--====== Section Content ======-->
        <div class="section__content">
            <div class="container">
                <div class="breadcrumb">
                    <div class="breadcrumb__wrap">
                        <ul class="breadcrumb__list">
                            <li class="has-separator">

                                <a href="index.html">Home</a>
                            </li>
                            <li class="has-separator">

                                <a href="signup.html">Signup</a>
                            </li>
                            <li class="is-marked">

                                <a href="signup.html">Marchand</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--====== End - Section 1 ======-->
    <!--====== Section 2 ======-->
    <div class="u-s-p-b-60">

        <!--====== Section Intro ======-->
        <div class="section__intro u-s-m-b-60">
            <div class="container">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="section__text-wrap">
                            <h1 class="section__heading u-c-secondary">FINALISATION DU COMPTE</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--====== End - Section Intro ======-->
        <!--====== Section Content ======-->
        <div class="section__content">
            <div class="container">
                <div class="row row--center">
                    <div class="col-lg-6 col-md-8 u-s-m-b-30">
                        <div class="l-f-o">
                            <div class="l-f-o__pad-box">
                                <h1 class="gl-h1">INFORMATION DU MARCHAND</h1>
                                @using (Html.BeginForm("Create", "Proprietaires", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
                                {
                                    @Html.AntiForgeryToken()
                                    @Html.ValidationSummary("", new { @class = "text-danger" })

                                    <div class="u-s-m-b-15">
                                        <div class="u-s-m-b-15">
                                            @Html.Label("S'inscrire en tant que", new { @class = "gl-label" })
                                        </div>
                                        <div class="radio-box newsletter__radio">
                                            @Html.RadioButtonFor(model => model.isCompany, "false")

                                            <div class="radio-box__state radio-box__state--primary">
                                                @Html.Label("Particulier", new { @class = "radio-box__label", @style = "color : #333" })
                                            </div>
                                        </div>
                                        <div class="radio-box newsletter__radio">
                                            @Html.RadioButtonFor(model => model.isCompany, "true")

                                            <div class="radio-box__state radio-box__state--primary">
                                                @Html.Label("Entreprise", new { @class = "radio-box__label", @style = "color : #333;" })

                                            </div>
                                        </div>
                                        @Html.ValidationMessageFor(model => model.isCompany, "", new { @class = "text-danger" })

                                    </div>

                                    <div class="u-s-m-b-30">
                                        @Html.Label("Full Name", new { @class = "gl-label" })
                                        @Html.TextBoxFor(model => model.Name, new { @class = "input-text input-text--primary-style", placeholder = "Your Name" })
                                        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="u-s-m-b-30">
                                        @Html.LabelFor(model => model.Tel, new { @class = "gl-label" })
                                        @Html.TextBoxFor(model => model.Tel, new { @class = "input-text input-text--primary-style", placeholder = "+212687120381" })
                                        @Html.ValidationMessageFor(model => model.Tel, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="u-s-m-b-30">

                                        @Html.LabelFor(model => model.Adresse, new { @class = "gl-label" })
                                        @Html.TextBoxFor(model => model.Adresse, new { @class = "input-text input-text--primary-style", placeholder = "Adresse CIN" })
                                        @Html.ValidationMessageFor(model => model.Adresse, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="u-s-m-b-30">

                                        @Html.LabelFor(model => model.Ville, new { @class = "gl-label" })
                                        @Html.TextBoxFor(model => model.Ville, new { @class = "input-text input-text--primary-style", placeholder = "exemple : Fes" })
                                        @Html.ValidationMessageFor(model => model.Ville, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="u-s-m-b-30">

                                        @Html.LabelFor(model => model.Logo, new { @class = "gl-label" })
                                        @Html.TextBoxFor(model => model.Logo, new { @class = "input-text input-text--primary-style", @type = "file" })
                                        @Html.ValidationMessageFor(model => model.Logo, "", new { @class = "text-danger" })

                                    </div>
                                    <div class="u-s-m-b-15">

                                        <button class="btn btn--e-transparent-brand-b-2" type="submit">CREATE</button>
                                    </div>
                                    <div class="u-s-m-b-15">
                                        @ViewBag.FileStatus
                                    </div>

                                    <a class="gl-link" href="#">Return to Home</a>

                                }

                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--====== End - Section Content ======-->
    </div>
    <!--====== End - Section 2 ======-->
</div>
<!--====== End - App Content ======-->

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

